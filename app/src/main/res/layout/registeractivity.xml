<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="14dp"
    android:background="@color/white"

    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/fi_arrow_left"
        android:padding="4.2dp"
        android:background="@drawable/fi_arrow_left_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/backbutton"
        android:clickable="true"
        android:onClick="backbuttonClicked"/>
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#1e293b"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:text="Register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbutton"
        android:layout_marginTop="0dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="First Name"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/firstnametitle"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Lastnametitle"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last Name"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/Lastnametitle"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/firstnametitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/onboardingedittext_btn_selector"
        android:hint="James"
        android:padding="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Lastnametitle"
        app:layout_constraintTop_toBottomOf="@+id/firstnametitle"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/onboardingedittext_btn_selector"
        android:hint="Bond"
        android:padding="14dp"
        android:layout_marginTop="6dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/firstnametitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lastnametitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstnametitle"
        android:orientation="vertical"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="#1e293b"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email or phone number"
            android:textColor="#1e293b"
            android:padding="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/onboardingedittext_btn_selector"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#1e293b"
            android:layout_marginTop="12dp"



            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:padding="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/onboardingedittext_btn_selector"
            android:id="@+id/emaileditTextt"
            android:drawableRight="@drawable/fi_eye_off"
            android:inputType="textPassword"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1e293b"
            android:text="Confirm Password"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm your password"
            android:padding="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/onboardingedittext_btn_selector"
            android:id="@+id/emaileditText"
            android:drawableRight="@drawable/fi_eye_off"
            android:inputType="textPassword"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:letterSpacing="00.2"
            android:layout_marginTop="50dp"
            android:lineSpacingExtra="6sp"
            android:text="Login"
            android:textSize="13sp"
            android:gravity="center"

            android:textColor="#fff"
            android:background="@drawable/primary_btn"
            android:clickable="true"
            android:id="@+id/loginid"


            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hover_btn"
            android:layout_marginTop="0dp"
            android:clickable="true"


            >


        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#475569"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="By continuing, you agree to our Terms of Service and Privacy Policy."/>










</androidx.constraintlayout.widget.ConstraintLayout>