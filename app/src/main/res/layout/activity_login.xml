<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="14dp">
    
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4.2dp"
        android:id="@+id/backbutton"
        android:onClick="backbuttonClicked"
        android:src="@drawable/fi_arrow_left"
        android:clickable="true"
        android:background="@drawable/fi_arrow_left_btn_bg"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#1e293b"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:id="@+id/Toptext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp"
        android:text="Login"
        android:clickable="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Toptext"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="43dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="#1e293b"

             />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:textColor="#1e293b"
            android:padding="14dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/onboardingedittext_btn_selector"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#1e293b"
            android:layout_marginTop="12dp"



            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:padding="14dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/onboardingedittext_btn_selector"


            android:id="@+id/emaileditText"
            android:inputType="textPassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#3c9afb"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8sp"
            android:gravity="end"
            android:text="Forgot Password?"
            android:id="@+id/enterpassword"
            android:clickable="true"
            android:layout_marginTop="12dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:letterSpacing="00.2"
            android:layout_marginTop="50dp"
            android:lineSpacingExtra="6sp"
            android:text="Login"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/primary_btn"
            android:clickable="true"
            android:id="@+id/loginid"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hover_btn"
            android:layout_marginTop="20dp"
            android:clickable="true"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:letterSpacing="00.2"
                android:lineSpacingExtra="6sp"
                android:text="Login with Google"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/sso_icon_google"

                android:clickable="true"
                android:id="@+id/loginwithid"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
    android:id="@+id/bottomleftttext"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="normal"
    android:textSize="14sp"
    android:textColor="#64748b"
    android:letterSpacing="0.01"
    android:lineSpacingExtra="8sp"
        android:text="or login with"
    app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bottomrighttext"
    />
    <TextView
        android:id="@+id/bottomrighttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#64748b"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8sp"
        android:text="Register"
        android:clickable="true"


        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"

        app:layout_constraintLeft_toRightOf="@+id/bottomleftttext"




        />

</androidx.constraintlayout.widget.ConstraintLayout>